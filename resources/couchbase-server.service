# -*- mode: conf-unix; -*-
[Unit]
Description=Couchbase Server
Documentation=http://docs.couchbase.com
After=network.target remote-fs.target nss-lookup.target
Wants=saslauthd.service

[Service]
SyslogIdentifier=couchbase
User=couchbase
Type=simple
WorkingDirectory=/opt/couchbase/var/lib/couchbase
LimitNOFILE=70000
LimitMEMLOCK=infinity
ExecStart=%INSTALLPATH%/bin/couchbase-server -- -noinput
ExecStop=%INSTALLPATH%/bin/couchbase-server -k

[Install]
WantedBy=multi-user.target